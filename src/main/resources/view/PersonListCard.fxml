<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
            <ImageView id="avatarImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
            <VBox alignment="CENTER_LEFT">
               <children>
                  <HBox>
                     <children>
                    <Label fx:id="id" minWidth="0.0" styleClass="cell_big_label" />
                    <Label fx:id="name" minWidth="0.0" styleClass="cell_big_label" text="\$first" />
                     </children>
                  </HBox>
               <FlowPane fx:id="tags" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
      </HBox>
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone">
            <padding>
               <Insets top="10.0" />
            </padding></Label>
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
